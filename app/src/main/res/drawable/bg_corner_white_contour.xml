<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- outer circle -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#14ACB8C3" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!-- inner shadow of outer circle -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        >
        <shape android:shape="rectangle">
            <solid android:color="#1eACB8C3" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        >
        <shape android:shape="rectangle">
            <solid android:color="#28ACB8C3" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        >
        <shape android:shape="rectangle">
            <solid android:color="#32ACB8C3" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!-- gap -->
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        >
        <shape android:shape="rectangle" >
            <solid android:color="#FFFFFF" />
            <corners android:radius="6dp" />
        </shape>
    </item>


</layer-list>