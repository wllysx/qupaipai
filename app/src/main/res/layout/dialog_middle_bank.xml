<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="39dp"
        android:layout_marginRight="39dp"
        android:background="@drawable/bg_corner_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:padding="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="支持银行及限额说明"
            android:textColor="#ff303030"
            android:textSize="14sp"
            />
        <LinearLayout
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ededee">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="24"
                android:text="支持银行(额度）"
                android:textSize="@dimen/textsize12"
                android:textColor="#424242"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="14"
                android:gravity="center"
                android:text="借记卡"
                android:textSize="@dimen/textsize12"
                android:textColor="#424242"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="14"
                android:gravity="center"
                android:text="信用卡"
                android:textSize="@dimen/textsize12"
                android:textColor="#424242"/>
        </LinearLayout>

        <!--数据start-->
        <LinearLayout
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="24"
                android:text="中国银行"
                android:textSize="@dimen/textsize12"
                android:gravity="center_vertical"
                android:drawablePadding="15dp"
                android:drawableLeft="@mipmap/icon_bank1"
                android:textColor="#424242"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="14"
                android:gravity="center"
                android:text="10,000"
                android:textSize="@dimen/textsize12"
                android:textColor="#424242"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="14"
                android:gravity="center"
                android:text="10,000"
                android:textSize="@dimen/textsize12"
                android:textColor="#424242"/>
        </LinearLayout>

        <LinearLayout
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="24"
                android:text="农业银行"
                android:textSize="@dimen/textsize12"
                android:gravity="center_vertical"
                android:drawablePadding="15dp"
                android:drawableLeft="@mipmap/icon_bank2"
                android:textColor="#424242"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="14"
                android:gravity="center"
                android:text="10,000"
                android:textSize="@dimen/textsize12"
                android:textColor="#424242"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="14"
                android:gravity="center"
                android:text="10,000"
                android:textSize="@dimen/textsize12"
                android:textColor="#424242"/>
        </LinearLayout>

        <LinearLayout
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="24"
                android:text="工商银行"
                android:textSize="@dimen/textsize12"
                android:gravity="center_vertical"
                android:drawablePadding="15dp"
                android:drawableLeft="@mipmap/icon_bank3"
                android:textColor="#424242"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="14"
                android:gravity="center"
                android:text="10,000"
                android:textSize="@dimen/textsize12"
                android:textColor="#424242"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="14"
                android:gravity="center"
                android:text="10,000"
                android:textSize="@dimen/textsize12"
                android:textColor="#424242"/>
        </LinearLayout>

        <LinearLayout
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="24"
                android:text="建设银行"
                android:textSize="@dimen/textsize12"
                android:gravity="center_vertical"
                android:drawablePadding="15dp"
                android:drawableLeft="@mipmap/icon_bank4"
                android:textColor="#424242"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="14"
                android:gravity="center"
                android:text="10,000"
                android:textSize="@dimen/textsize12"
                android:textColor="#424242"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="14"
                android:gravity="center"
                android:text="10,000"
                android:textSize="@dimen/textsize12"
                android:textColor="#424242"/>
        </LinearLayout>

        <LinearLayout
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="24"
                android:text="交通银行"
                android:textSize="@dimen/textsize12"
                android:gravity="center_vertical"
                android:drawablePadding="15dp"
                android:drawableLeft="@mipmap/icon_bank5"
                android:textColor="#424242"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="14"
                android:gravity="center"
                android:text="10,000"
                android:textSize="@dimen/textsize12"
                android:textColor="#424242"/>
