<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp">

        <com.gcssloop.widget.RCImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_photo"
            app:round_as_circle="true"
            android:layout_marginRight="15dp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_tx_default"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户昵称"
                android:textColor="#ff535353"
                android:textSize="@dimen/textsize13"
                />

            <TextView
                android:id="@+id/tv_createTime"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-06-17  17:24:32"
                android:textColor="#ffa6a6a6"
                android:textSize="@dimen/textsize12"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_indirectNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已推3人"
            android:textColor="@color/iscur"
            android:textSize="@dimen/textsize14"
            />
    </LinearLayout>

</RelativeLayout>