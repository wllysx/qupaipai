<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/title_item" />



        <LinearLayout
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_bank_car"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_logoUrl"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/bank_jianshe" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_bankName"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="招商银行"
                                android:textColor="@color/white"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_useType1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="本卡仅用于提现"
                                android:textColor="#ccffffff"
                                android:textSize="@dimen/textsize11"
                                />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_useType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="提现卡"
                            android:textColor="#ccffffff"
                            android:textSize="@dimen/textsize11" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_shortCardCode"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="55dp"
                    android:layout_width="229dp"
                    android:layout_height="34dp"
                    android:text="**** **** **** 9876"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize24"
                    />


            </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="首次绑定"
                android:textColor="#ff262626"
                android:textSize="@dimen/textsize15"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-12-12 09:08:11"
                android:textColor="#ff626262"
                android:textSize="@dimen/textsize15"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_unbind"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="60dp"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="解绑"
            android:background="@drawable/app_bank_unbind"
            android:textColor="@color/iscur"
            android:textSize="@dimen/textsize16"
            android:gravity="center"
            />



    </LinearLayout>

</FrameLayout>
