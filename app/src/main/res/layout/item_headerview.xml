<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_main"
    >

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp">
            <com.youth.banner.Banner
                android:layout_marginTop="5dp"
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@color/white"
                app:indicator_drawable_selected="@drawable/bg_circle_vp_select"
                app:indicator_drawable_unselected="@drawable/bg_circle_vp_unselect"
                app:indicator_height="6dp"
                app:indicator_width="6dp"
                app:indicator_margin="4dp" />
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:id="@+id/guide_ll_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:gravity="center"/>
        </RelativeLayout>


        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_type1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/icon_shop1"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="商城"
                    android:textColor="#414040"
                    android:textSize="@dimen/textsize14" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_type2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/icon_shop2"
                    android:drawablePadding="9dp"
                    android:gravity="center"
                    android:text="寄拍区"
                    android:textColor="#414040"
                    android:textSize="@dimen/textsize14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_typemiddle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableTop="@mipmap/icon_shopmiddle"
                    android:drawablePadding="9dp"
                    android:gravity="center"
                    android:text="特卖"
                    android:textColor="#414040"
                    android:textSize="@dimen/textsize14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_type5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/icon_hot"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="爆品"
                    android:textColor="#414040"
                    android:textSize="@dimen/textsize14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_type3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/icon_shop3"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="拍卖订单"
                    android:textColor="#414040"
                    android:textSize="@dimen/textsize14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_type4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/icon_shop4"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="商城订单"
                    android:textColor="#414040"
                    android:textSize="@dimen/textsize14" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="5dp"
        android:background="@color/bg_main"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jfsc_dian_zuo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="为您推荐"
            android:textColor="#ff161616"
            android:textSize="@dimen/textsize16"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jfsc_dian_you" />


    </LinearLayout>



</LinearLayout>