<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="17dp"
    android:paddingRight="13dp"
    android:background="@color/white">

    <!--商品预览-->
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_marginRight="10dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="7dp"
            app:cardElevation="0dp"
            android:orientation="vertical"
            >
            <com.gcssloop.widget.RCImageView
                android:id="@+id/iv_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:round_corner="7dp"
                android:src="@color/line"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_commoditytitle"
                android:layout_marginBottom="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="紫泥 半手工 紫砂壶茶具"
                android:textColor="@color/textcolor7"
                android:textSize="@dimen/textsize14"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成交价："
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/textsize15"
                    />
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥0"
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/textsize15"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--保证金 尾款-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>
    <LinearLayout
        android:layout_marginTop="13dp"
        android:layout_marginBottom="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_firstpricetitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="积分"
            android:textColor="@color/textcolor17"
            android:textSize="@dimen/textsize13"
            />
        <TextView
            android:id="@+id/tv_firstprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/textcolor17"
            android:textSize="@dimen/textsize13"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_finalpricetitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="金额"
            android:textColor="@color/textcolor17"
            android:textSize="@dimen/textsize13"
            />
        <TextView
            android:id="@+id/tv_finalprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥0.00"
            android:textColor="@color/textcolor17"
            android:textSize="@dimen/textsize13"
            />
    </LinearLayout>



</LinearLayout>