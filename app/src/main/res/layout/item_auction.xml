<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner_bgmain"
            android:gravity="center_vertical"
            android:padding="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                app:cardCornerRadius="7dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.gcssloop.widget.RCImageView
                        android:id="@+id/iv_logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@color/line"
                        app:round_corner="7dp" />

                    <TextView
                        android:id="@+id/tv_states"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_alignParentBottom="true"
                        android:background="#b4933727"
                        android:gravity="center"
                        android:text="竞拍中"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize11" />

                    <TextView
                        android:id="@+id/tv_states_fail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/bg_order_states1"
                        android:gravity="center"
                        android:text="寄拍中"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize11"
                        android:visibility="gone" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_goodsName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13dp"
                    android:maxLines="2"
                    android:text="紫泥 半手工 紫砂壶茶具"
                    android:textColor="@color/textcolor7"
                    android:textSize="@dimen/textsize14" />


                <TextView
                    android:id="@+id/tv_endTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="距结束：25天12小时"
                    android:textColor="@color/iscur"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    android:id="@+id/tv_topPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="当前价：￥5600.00"
                    android:textColor="#ff5f5f5f"
                    android:textSize="@dimen/textsize14" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>