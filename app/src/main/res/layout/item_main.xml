<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_view"
    >


    <FrameLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:scaleType="center"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_order_states3"
            android:gravity="center"
            android:text="已结束"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize15" />
    </FrameLayout>

    <LinearLayout
        android:background="@drawable/bg_corner_bgmain_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:paddingLeft="6dp"
        android:paddingTop="6dp"
        android:paddingRight="6dp"
        android:orientation="vertical">
        <!--标题-->
        <TextView
            android:id="@+id/tv_goodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:text="18k金镶天然黄水晶戒指..."
            android:textColor="@color/textcolor1"
            android:textSize="@dimen/textsize15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pricetype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前价"
                android:textColor="#ff757575"
                android:textSize="@dimen/textsize12" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="￥360"
                android:textColor="@color/iscur"
                android:textSize="@dimen/textsize15" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="42次出价"
                android:textColor="#ff757575"
                android:textSize="@dimen/textsize12"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="9dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="结拍时间:12:30"
                android:textColor="@color/yellow5"
                android:textSize="@dimen/textsize12" />

            <TextView
                android:id="@+id/tv_goprice"
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:background="@drawable/bg_iscur_10"
                android:gravity="center"
                android:text="去出价"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize12" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>