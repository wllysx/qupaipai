<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_address"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_marginTop="19dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <LinearLayout
            android:id="@+id/ll_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_address"/>
            <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="收件人："
                        android:textColor="@color/textcolor7"
                        android:textSize="@dimen/textsize14" />
                </LinearLayout>

                <TextView
                    android:singleLine="true"
                    android:id="@+id/tv_phone"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="13612346789"
                    android:textColor="@color/textcolor7"
                    android:textSize="@dimen/textsize14"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_address"
                android:lineSpacingExtra="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="地址：浙江省杭州市余杭区文一西路海创科技中心2栋楼508室"
                android:maxLines="2"
                android:textColor="@color/textcolor8"
                android:textSize="@dimen/textsize13"
                />
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:gravity="center"
            android:id="@+id/ll_address_add"
            android:layout_marginRight="46dp"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择收货地址"
                android:textColor="#ff181818"
                android:textSize="@dimen/textsize15"
                android:drawableLeft="@mipmap/icon_address"
                android:drawablePadding="10dp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_address_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_right"/>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@mipmap/bg_orderline"/>





</LinearLayout>