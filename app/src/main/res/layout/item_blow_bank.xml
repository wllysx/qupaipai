<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_logoUrl"
            android:layout_marginRight="13dp"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/icon_ali_pay"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_bankName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:textColor="@color/textcolor7"
                android:textSize="@dimen/textsize14"
                />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_cardtype1"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="借记卡"
                android:textColor="#ffff8b00"
                android:textSize="@dimen/textsize10"
                android:background="@drawable/bg_card_tyep"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_cardtype2"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信用卡"
                android:textColor="@color/iscur"
                android:textSize="@dimen/textsize10"
                android:background="@drawable/bg_card_tyep1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>