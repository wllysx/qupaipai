<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner_bgmain"
            android:gravity="center_vertical"
            android:padding="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                app:cardCornerRadius="7dp"
                app:cardElevation="0dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.gcssloop.widget.RCImageView
                        app:clip_background="true"
                        android:id="@+id/iv_logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:round_corner="7dp"
                        android:src="@color/line"
                        android:scaleType="centerCrop"
                        />
                    <TextView
                        android:id="@+id/tv_states"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:gravity="center"
                        android:text="寄拍中"
                        android:textSize="@dimen/textsize11"
                        android:textColor="@color/white"
                        android:layout_alignParentBottom="true"
                        android:background="#b4933727"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_commoditytitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13dp"
                    android:text="紫泥 半手工 紫砂壶茶具"
                    android:textColor="@color/textcolor7"
                    android:textSize="@dimen/textsize14"
                    android:maxLines="2"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tv_price"
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2100积分"
                            android:textColor="@color/textcolor16"
                            android:textSize="@dimen/textsize12"
                            />
                        <TextView
                            android:id="@+id/tv_integral"
                            android:singleLine="true"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+￥1800"
                            android:textColor="@color/textcolor24"
                            android:textSize="@dimen/textsize12"
                            />
                        <TextView
                            android:singleLine="true"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/tv_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="×1"
                            android:textColor="@color/textcolor16"
                            android:textSize="@dimen/textsize12"
                            />
                    </LinearLayout>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_submit"
                        android:gravity="center"
                        android:layout_width="68dp"
                        android:layout_height="23dp"
                        android:background="@drawable/bg_order_submit_yellow"
                        android:textColor="@color/iscur"
                        android:textSize="@dimen/textsize13"
                        android:text="去支付"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>