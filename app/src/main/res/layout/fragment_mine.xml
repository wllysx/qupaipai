<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="203dp"
                android:background="@mipmap/wd_bg">

            </FrameLayout>

            <RelativeLayout
                android:id="@+id/ll_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical">

                    <ImageView
                        android:id="@+id/iv_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="4dp"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="10dp"
                        android:src="@mipmap/icon_main_message" />
                    <ImageView
                        android:id="@+id/iv_set"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingTop="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="15dp"
                        android:src="@mipmap/icon_setting" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="45dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/bg_corner_white"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <!--昵称-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center_horizontal">


                            <LinearLayout
                                android:gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="48dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_nickname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="喋喋以喋以喋喋"
                                    android:textColor="#272727"
                                    android:textSize="@dimen/textsize18" />

                                <TextView
                                    android:id="@+id/tv_invitationCode"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="我的邀请码："
                                    android:textColor="#555555"
                                    android:textSize="@dimen/textsize12" />
                            </LinearLayout>
                        </LinearLayout>

                        <!--积分 余额 朋友-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:layout_marginBottom="23dp">

                            <LinearLayout
                                android:id="@+id/ll_integral"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingRight="20dp">

                                <TextView
                                    android:id="@+id/tv_integralAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="7dp"
                                    android:text="12"
                                    android:textColor="#2b2b2b"
                                    android:textSize="@dimen/textsize20" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="我的积分"
                                    android:textColor="#616161"
                                    android:textSize="@dimen/textsize13" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_balance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:singleLine="true"
                                    android:id="@+id/tv_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="7dp"
                                    android:text="12"
                                    android:textColor="#c30f20"
                                    android:textSize="@dimen/textsize20" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="我的余额"
                                    android:textColor="#616161"
                                    android:textSize="@dimen/textsize13" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_friend"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="20dp">

                                <TextView
                                    android:id="@+id/tv_fanNums"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="7dp"
                                    android:text="12"
                                    android:textColor="#2B2B2B"
                                    android:textSize="@dimen/textsize20" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="我的朋友"
                                    android:textColor="#616161"
                                    android:textSize="@dimen/textsize13" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <com.gcssloop.widget.RCImageView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/iv_photo"
                        app:round_as_circle="true"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/icon_tx_default"
                        app:clip_background="true"
                        app:stroke_width="1dp"
                        app:stroke_color="@color/white"
                        />

                </RelativeLayout>


            </RelativeLayout>

        </FrameLayout>
        <!--下-->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_corner_white">

                <LinearLayout
                    android:id="@+id/ll_allorder"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="我的订单"
                        android:textColor="@color/textcolor7"
                        android:textSize="@dimen/textsize15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="全部订单"
                        android:textColor="#ff979494"
                        android:textSize="@dimen/textsize13" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_right" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ededed" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="13dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="18dp">
                    <!--待付款-->
                    <LinearLayout
                        android:id="@+id/ll_order1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:paddingTop="5dp"
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@mipmap/icon_wl1"
                                android:drawablePadding="10dp"
                                android:text="待付款"
                                android:textColor="#ff7e7f7f"
                                android:textSize="@dimen/textsize12" />
                            <LinearLayout
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:visibility="invisible"
                                    android:id="@+id/tv_point1"
                                    android:layout_marginLeft="20dp"
                                    android:layout_width="20dp"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/textsize8"
                                    android:background="@drawable/bg_corner_red"
                                    android:paddingTop="1dp"
                                    android:paddingBottom="1dp"
                                    android:paddingLeft="1dp"
                                    android:paddingRight="1dp"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                    <!--待付款-->
                    <LinearLayout
                        android:id="@+id/ll_order2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:paddingTop="5dp"
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@mipmap/icon_wl2"
                                android:drawablePadding="10dp"
                                android:text="待发货"
                                android:textColor="#ff7e7f7f"
                                android:textSize="@dimen/textsize12" />
                            <LinearLayout
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:visibility="invisible"
                                    android:id="@+id/tv_point2"
                                    android:layout_marginLeft="20dp"
                                    android:layout_width="20dp"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/textsize8"
                                    android:background="@drawable/bg_corner_red"
                                    android:paddingTop="1dp"
                                    android:paddingBottom="1dp"
                                    android:paddingLeft="1dp"
                                    android:paddingRight="1dp"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                    <!--待付款-->
                    <LinearLayout
                        android:id="@+id/ll_order3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:paddingTop="5dp"
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@mipmap/icon_wl3"
                                android:drawablePadding="10dp"
                                android:text="待收货"
                                android:textColor="#ff7e7f7f"
                                android:textSize="@dimen/textsize12" />
                            <LinearLayout
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:visibility="invisible"
                                    android:id="@+id/tv_point3"
                                    android:layout_marginLeft="20dp"
                                    android:layout_width="20dp"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/textsize8"
                                    android:background="@drawable/bg_corner_red"
                                    android:paddingTop="1dp"
                                    android:paddingBottom="1dp"
                                    android:paddingLeft="1dp"
                                    android:paddingRight="1dp"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                    <!--待付款-->
                    <LinearLayout
                        android:id="@+id/ll_order4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:paddingTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@mipmap/icon_wl4"
                            android:drawablePadding="10dp"
                            android:text="交易成功"
                            android:textColor="#ff7e7f7f"
                            android:textSize="@dimen/textsize12" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_main"/>

            <FrameLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.qupp.client.utils.view.ResizableImageView
                    android:id="@+id/iv_qiandao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/wd_wqd"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="3"/>
                    <View
                        android:id="@+id/v_about"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                    <View
                        android:id="@+id/v_qiandao"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"/>

                </LinearLayout>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_main"/>
            <!--更多服务-->
            <LinearLayout
                android:layout_marginBottom="15dp"
                android:background="@drawable/bg_corner_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_corner_white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginLeft="12dp"
                        android:gravity="center_vertical"
                        android:text="常用功能"
                        android:textColor="@color/textcolor7"
                        android:textSize="@dimen/textsize15" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ededed" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingTop="18dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="18dp">
                        <!--优惠券-->
                        <LinearLayout
                            android:id="@+id/ll_more9"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@mipmap/icon_more9"
                                android:drawablePadding="10dp"
                                android:text="优惠券"
                                android:textColor="#ff7e7f7f"
                                android:textSize="@dimen/textsize12" />
                        </LinearLayout>

                        <!--待付款-->
                        <LinearLayout
                            android:id="@+id/ll_more2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@mipmap/icon_more2"
                                android:drawablePadding="10dp"
                                android:text="专属客服"
                                android:textColor="#ff7e7f7f"
                                android:textSize="@dimen/textsize12" />
                        </LinearLayout>
                        <!--待付款-->
                        <LinearLayout
                            android:id="@+id/ll_more3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@mipmap/icon_more3"
                                android:drawablePadding="10dp"
                                android:text="收货地址"
                                android:textColor="#ff7e7f7f"
                                android:textSize="@dimen/textsize12" />
                        </LinearLayout>
                        <!--待付款-->
                        <LinearLayout
                            android:id="@+id/ll_more4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@mipmap/icon_more4"
                                android:drawablePadding="10dp"
                                android:text="分享好友"
                                android:textColor="#ff7e7f7f"
                                android:textSize="@dimen/textsize12" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingTop="4dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="20dp">
                        <!--待付款-->
                        <LinearLayout
                            android:id="@+id/ll_more6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@mipmap/icon_more6"
                                android:drawablePadding="10dp"
                                android:text="我的收藏"
                                android:textColor="#ff7e7f7f"
                                android:textSize="@dimen/textsize12" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_more5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@mipmap/icon_more5"
                                android:drawablePadding="10dp"
                                android:text="用户须知"
                                android:textColor="#ff7e7f7f"
                                android:textSize="@dimen/textsize12" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_more7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@mipmap/icon_more7"
                                android:drawablePadding="10dp"
                                android:text="我的活动"
                                android:textColor="#ff7e7f7f"
                                android:textSize="@dimen/textsize12" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_more8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTop="@mipmap/icon_more8"
                                android:drawablePadding="10dp"
                                android:text="今日结拍"
                                android:textColor="#ff7e7f7f"
                                android:textSize="@dimen/textsize12" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/bg_main"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>